table
  thead
    tr
      th Book
      th Patron
      th Loaned on
      th Return by
      th Returned on
      th Action
  tbody
    each loan in loans
      tr
        td
          a(href=`/book/${loan.book_id}`) #{loan.book_title}
        td
          a(href=`/patron/${loan.patron_id}`) #{loan.patron_name}
        td= loan.loaned_on
        td= loan.return_by
        td= loan.returned_on
        td
          if loan.returned_on === null
            a.button(href=`/return/${loan.book_id}`) Return Book