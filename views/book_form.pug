h1= title
include validation_errors.pug
form(method="post")
  p
    label(for='title') Title (required)
    input#title(type='text' name='title' value=book.dataValues.title)
  p
    label(for='author') Author (required)
    input#author(type='text' name='author' value=book.dataValues.author)
  p
    label(for='genre') Genre (required)
    input#genre(type='text' name='genre' value=book.dataValues.genre)
