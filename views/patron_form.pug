h1=title
if (errors)
  h2.error Validation error!
    each error in errors
      h3.error= error.message
form(method='post')
  p
    label(for='first_name') First Name
    input#first_name(type='text' name='first_name' value=patron.dataValues.first_name)
  p
    label(for='last_name') Last Name
    input#last_name(type='text' name='last_name' value=patron.dataValues.last_name)
  p
    label(for='address') Address
    input#address(type='text' name='address' value=patron.dataValues.address)
  p
    label(for='email') Email
    input#email(type='text' name='email' value=patron.dataValues.email)
  p
    label(for='library_id') Library ID
    input#library_id(type='text' name='library_id' value=patron.dataValues.library_id)
  p
    label(for='zip_code') Zip Code
    input#zip_code(type='text' name='zip_code' value=patron.dataValues.zip_code)
  p
    input(type='submit', value=`${button_message}`)